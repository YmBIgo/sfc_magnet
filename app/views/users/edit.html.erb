<% provide :title, "ユーザー情報を編集" %>
<header>
  <div class="header-content">
    <div class="header-content-inner">
      <div class="form-wrapper">
        <h2>ユーザー情報</h2>
        <%= form_for @user do |f| %>
          <div class="form-item">
            <%= f.label "プロフィール画像" %>
            <%= f.file_field :avatar, :class => "form-control" %>
          </div>
          <div class="row">
            <div class="col-sm-6 col-xs-6">
              <%= f.label "苗字" %>
            </div>
            <div class="col-sm-6 col-xs-6">
              <%= f.label "名前" %>
            </div>
          </div>
          <div class="form-small-item">
            <div class="row">
              <div class="col-sm-6 col-xs-6">
                <%= f.text_field :family_name, :class => "form-control" %>
              </div>
              <div class="col-sm-6 col-xs-6">
                <%= f.text_field :first_name, :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6 col-xs-6">
              <%= f.label "所属" %>
            </div>
            <div class="col-sm-6 col-xs-6">
              <%= f.label "役割" %>
            </div>
          </div>
          <div class="form-small-item">
            <div class="row">
              <div class="col-sm-6 col-xs-6">
                <%= f.text_field :party, :class => "form-control" %>
              </div>
              <div class="col-sm-6 col-xs-6">
                <%= f.collection_select :job_id, Job.all, :id, :name , {:class => "form-control"} %>
              </div>
            </div>
          </div>
          <div class="form-item">
            <%= f.label "あなたのスキルと興味分野を教えてください" %>
            <%= f.text_area :skill, :class => "form-control" %>
          </div>
          <div class="form-item">
            <%= f.label "自己紹介" %>
            <%= f.text_area :self_intro, :class => "form-control" %>
          </div>
          <div class="actions">
            <%= link_to "トップに戻る", root_path, :class => 'btn btn-primary' %>
            <%= f.submit "編集する", :class => 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
