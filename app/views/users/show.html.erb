<% provide :title, "#{@user.name}" %>
<aside class="bg-dark">
</aside>
<div class="container">
  <div class="text-center">
    <h2><strong><%= "#{@user.family_name} #{@user.first_name}さん" %></strong></h2>
    <h3>(<%= "#{@user.school.name}：#{@user.job.name}" %>)</h3>
  </div>
  <hr>
  <% if @user.avatar.present? %>
    <%= image_tag @user.authenticated_image_url(:large), :class => "img-responsive", :alt => "", :style => "margin:0 auto" %>
  <% end %>
  <hr>
  <div class="text-center">
    <h3>自己紹介</h3>
    <p><%= simple_format(@user.self_intro) %></p>
    <hr>
    <h3>スキル</h3>
    <p><%= simple_format(@user.skill) %></p>
    <hr>
    <p>メールアドレス(<%= "#{@user.email}" %>)</p>
    <% if @user.id == current_user.id %>
      <p>
      <%= link_to "ユーザーを編集する", edit_user_path(current_user.id), :class => "btn btn-primary" %>　<%= link_to "登録情報を編集する", edit_user_registration_path, :class => "btn btn-primary", :style => "margin:5px" %>
      </p>
    <% end %>
    <hr>
    <h2>プロジェクト一覧</h2>
    <hr>
    <section class="no-padding">
      <div class="container-fuild">
        <div class="row no-gutter">
          <div id="ideas">
            <div class="page">
              <% @ideas.each do |i| %>
                <%= render 'ideas/idea', i: i %>
              <% end %>
            </div>
          </div>
        </div>
        <%= paginate @ideas %>
      </div>
  </section>
  </div>
  <hr>
</div>