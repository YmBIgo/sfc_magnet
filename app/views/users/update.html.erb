<% provide :title, "ユーザー情報が更新されました" %>
<header>
  <div class="header-content">
    <div class="header-content-inner">
      <div class="form-wrapper">
        <div class="text-center">
          <h2><strong>ユーザー情報を編集しました</strong></h2>
          <p><%= "#{@user.name}" %></p>
          <p><%= "#{@user.school.name}:#{@user.job.name}" %></p>
          <% if @user.avatar.present? %>
            <%= image_tag @user.authenticated_image_url(:large), :class => "img-responsive", :alt => "", :style => "margin:5px auto" %>
          <% end %>
        </div>
        <%= link_to "ユーザー情報を見る", user_path(current_user.id), :class => "btn btn-primary" %>
        <%= link_to "トップに戻る", root_path, :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</header>